  "items": [
    {
      "description": "Obtener la ruta actual",
      "code": "frappe.get_route()",
      "example": "const current_route = frappe.get_route();\n// Devuelve ['List', 'ToDo']"
    },
    {
      "description": "Establecer la ruta de la aplicación",
      "code": "frappe.set_route('List', 'Task', 'List')",
      "example": "// Navega a la vista de lista del Doctype 'Task'\nfrappe.set_route('List', 'Task');"
    },
    {
      "description": "Formatear un valor para mostrar",
      "code": "frappe.format(value, df, options)",
      "example": "const formatted_date = frappe.format('2024-07-31', { fieldtype: 'Date' });\n// Devuelve '31-07-2024' (dependiendo de la config. local)"
    },
    {
      "description": "Crear un espacio de nombres si no existe",
      "code": "frappe.provide('my_app.utils');",
      "example": "frappe.provide('my_app.ui');\nmy_app.ui.some_func = () => {};"
    },
    {
      "description": "Cargar un recurso (JS o CSS) de forma asíncrona",
      "code": "frappe.require(asset_path, callback)",
      "example": "frappe.require('/assets/my_app/js/extra.js', () => {\n  console.log('Script cargado');\n});"
    }
  ],

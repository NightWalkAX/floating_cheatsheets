{
  "title": "REST API (Frappe)",
  "language": "en",
  "tags": ["rest", "api", "frappe", "http", "crud"],
  "items": [
    {
      "description": "Token-based Authentication.",
      "code": "Header: 'Authorization: token api_key:api_secret'",
      "example": "# Generate the API Key and Secret from the User settings.\n# GET /api/resource/ToDo/TASK-00001\n# Authorization: token 123...:456..."
    },
    {
      "description": "Get a list of records.",
      "code": "GET /api/resource/{Doctype}",
      "example": "# Gets the first 20 ToDos\nGET /api/resource/ToDo?fields=[\"name\",\"description\"]"
    },
    {
      "description": "Get a single document.",
      "code": "GET /api/resource/{Doctype}/{DocName}",
      "example": "# Gets the ToDo with ID 'TASK-00001'\nGET /api/resource/ToDo/TASK-00001"
    },
    {
      "description": "Create a new document.",
      "code": "POST /api/resource/{Doctype}",
      "example": "# Body: { \"description\": \"My new task from the API\" }\nPOST /api/resource/ToDo"
    },
    {
      "description": "Update an existing document.",
      "code": "PUT /api/resource/{Doctype}/{DocName}",
      "example": "# Body: { \"description\": \"Updated description\" }\nPUT /api/resource/ToDo/TASK-00001"
    },
    {
      "description": "Delete a document.",
      "code": "DELETE /api/resource/{Doctype}/{DocName}",
      "example": "# Deletes the ToDo with ID 'TASK-00001'\nDELETE /api/resource/ToDo/TASK-00001"
    },
    {
      "description": "Call a whitelisted DocType method.",
      "code": "POST /api/resource/{Doctype}/{DocName}/{method}",
      "example": "# Calls the 'get_open_tasks' method in the ToDo controller\nGET /api/resource/ToDo/get_open_tasks"
    },
    {
      "description": "Call a generic whitelisted method.",
      "code": "GET /api/method/{dotted.path.to.method}",
      "example": "# Calls the 'frappe.auth.get_logged_user' function\nGET /api/method/frappe.auth.get_logged_user"
    }
  ],
  "created": "2025-09-27",
  "updated": "2025-10-01"
}
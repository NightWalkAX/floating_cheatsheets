{
  "title": "Hooks (Frappe)",
  "language": "en",
  "tags": ["hooks", "frappe", "python", "backend"],
  "items": [
    {
      "code": "app_name = \"my_app\"",
      "description": "The name of the application, used for locating templates and other resources.",
      "example": "app_name = \"my_app\""
    },
    {
      "code": "doc_events = { ... }",
      "description": "Assigns methods to DocType lifecycle events (e.g., on_update, validate).",
      "example": "doc_events = {\n    \"Task\": {\n        \"validate\": \"my_app.tasks.validate_task\",\n        \"on_update\": \"my_app.tasks.on_update_task\"\n    }\n}"
    },
    {
      "code": "scheduler_events = { ... }",
      "description": "Schedules periodic jobs (all, daily, weekly, monthly).",
      "example": "scheduler_events = {\n    \"daily\": [\n        \"my_app.tasks.cleanup_old_logs\"\n    ]\n}"
    },
    {
      "code": "fixtures = [ ... ]",
      "description": "Exports records from DocTypes (e.g., Custom Field, Property Setter) to JSON files during migration.",
      "example": "fixtures = [\"Custom Field\", \"Property Setter\"]"
    },
    {
      "code": "override_doctype_class = { ... }",
      "description": "Overrides the Python class of a standard or another app's DocType.",
      "example": "override_doctype_class = {\n    \"User\": \"my_app.overrides.custom_user.CustomUser\"\n}"
    },
    {
      "code": "website_search_config = { ... }",
      "description": "Configures which DocTypes are searchable on the website.",
      "example": "website_search_config = {\n    \"Help Article\": {\"title\": \"title\", \"content\": \"content\"}\n}"
    },
    {
      "code": "on_session_creation = [ ... ]",
      "description": "Executes a function after a user successfully logs in.",
      "example": "on_session_creation = [\"my_app.auth.user_session_setup\"]"
    }
  ],
  "created": "2025-09-27",
  "updated": "2025-10-01"
}
{
  "title": "Comandos Bench Cheatsheet (Frappe)",
  "language": "es",
  "tags": ["frappe", "bench", "cli", "erpnext", "devops"],
  "items": [
    {"code": "bench --version", "description": "Mostrar la versión de bench", "example": "bench --version"},
    {"code": "bench version", "description": "Mostrar la versión de todas las apps", "example": "bench version"},
    {"code": "bench src", "description": "Mostrar el directorio del repo bench", "example": "bench src"},
    {"code": "bench --help", "description": "Mostrar todos los comandos y ayuda", "example": "bench --help"},
    {"code": "bench [command] --help", "description": "Ayuda para comando específico", "example": "bench update --help"},
    {"code": "bench init [bench-name]", "description": "Crear un nuevo bench (Ejecutar desde el directorio home)", "example": "bench init mi-bench"},
    {"code": "bench --site [site-name] [COMMAND]", "description": "Especificar sitio para comando", "example": "bench --site misitio migrate"},
    {"code": "bench update", "description": "Actualiza bench y todas las apps, aplica parches, compila JS y CSS, y migra.", "example": "bench update"},
    {"code": "bench restart", "description": "Reinicia todos los servicios de bench", "example": "bench restart"},
    {"code": "bench backup", "description": "Crea un respaldo del sitio por defecto.", "example": "bench backup"},
    {"code": "bench backup-all-sites", "description": "Respalda todos los sitios", "example": "bench backup-all-sites --with-files"},
    {"code": "bench restore [archivo-respaldo]", "description": "Restaura un respaldo", "example": "bench restore respaldo.tar --with-private-files"},
    {"code": "bench migrate", "description": "Ejecuta parches, sincroniza esquema y recompila archivos/traducciones", "example": "bench migrate --rebuild-website index"},
    {"code": "bench migrate-env [version-python]", "description": "Migra el entorno virtual a la versión de Python deseada", "example": "bench migrate-env 3.10"},
    {"code": "bench --site [sitename] set-admin-password [password]", "description": "Restablece la contraseña de administrador", "example": "bench --site misitio set-admin-password mipass"},
    {"code": "bench destroy-all-sessions", "description": "Destruye todas las sesiones", "example": "bench destroy-all-sessions"},
    {"code": "bench config", "description": "Cambiar configuración de bench", "example": "bench config auto_update on"},
    {"code": "bench setup [componente]", "description": "Configurar componentes", "example": "bench setup nginx"},
    {"code": "bench new-app [nombre-app]", "description": "Crea una nueva app", "example": "bench new-app mi_app"},
    {"code": "bench get-app [repo-link]", "description": "Descarga una app desde un repositorio git e instala", "example": "bench get-app https://github.com/frappe/mi_app --branch develop"},
    {"code": "bench install-app [nombre-app]", "description": "Instala una app existente", "example": "bench install-app mi_app"},
    {"code": "bench remove-from-installed-apps [nombre-app]", "description": "Quita la app de la lista de apps", "example": "bench remove-from-installed-apps mi_app"},
    {"code": "bench uninstall-app [nombre-app]", "description": "Elimina la app y todo lo relacionado", "example": "bench uninstall-app mi_app"},
    {"code": "bench remove-app [nombre-app]", "description": "Quita la app completamente del bench", "example": "bench remove-app mi_app"},
    {"code": "bench --site [sitename] --force reinstall", "description": "Reinstala con base de datos nueva (¡Cuidado: borra la anterior!)", "example": "bench --site misitio --force reinstall"},
    {"code": "bench new-site [sitename]", "description": "Crea un nuevo sitio", "example": "bench new-site misitio --db-name mibd --admin-password pass"},
    {"code": "bench use [sitio]", "description": "Establece el sitio por defecto", "example": "bench use misitio"},
    {"code": "bench drop-site [sitio]", "description": "Elimina el sitio del disco y la base de datos completamente", "example": "bench drop-site misitio --root-login root --root-password pass"},
    {"code": "bench set-config [clave] [valor]", "description": "Agrega un par clave-valor al archivo de configuración del sitio", "example": "bench set-config developer_mode 1"},
    {"code": "bench console", "description": "Abre una consola IPython en el entorno bench", "example": "bench console --autoreload"},
    {"code": "bench execute [método]", "description": "Ejecuta un método dentro de cualquier app.", "example": "bench execute frappe.utils.scheduler.enqueue_scheduler_events"},
    {"code": "bench --site [sitename] mariadb", "description": "Abre la consola SQL", "example": "bench --site misitio mariadb"},
    {"code": "bench --site [sitename] export-fixtures [--app TEXTO]", "description": "Exporta los registros definidos en los hooks de la app como archivos JSON.", "example": "bench --site misitio export-fixtures --app mi_app"},
    {"code": "bench run-tests", "description": "Ejecuta pruebas", "example": "bench run-tests --app mi_app --doctype DocType"},
    {"code": "bench disable-production", "description": "Deshabilita el entorno de producción", "example": "bench disable-production"},
    {"code": "bench serve", "description": "Inicia un servidor web de desarrollo en 0.0.0.0", "example": "bench serve --port 8000 --with-coverage"},
    {"code": "bench enable-scheduler", "description": "Habilita el Scheduler para tareas programadas", "example": "bench enable-scheduler"},
    {"code": "bench doctor", "description": "Obtiene información de diagnóstico de los background workers", "example": "bench doctor"},
    {"code": "bench show-pending-jobs", "description": "Obtiene los trabajos pendientes", "example": "bench show-pending-jobs"},
    {"code": "bench purge-jobs", "description": "Elimina todos los trabajos pendientes", "example": "bench purge-jobs"},
    {"code": "bench data-import", "description": "Importa datos masivos desde .csv, .xls o .xlsx", "example": "bench data-import --file datos.csv --doctype Cliente --type Insert"}
  ],
  "created": "2025-09-29",
  "updated": "2025-09-29"
}
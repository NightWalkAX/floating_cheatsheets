{
  "title": "Bench Commands Cheatsheet (Frappe)",
  "language": "en",
  "tags": ["frappe", "bench", "cli", "erpnext", "devops"],
  "items": [
    {"code": "bench --version", "description": "Show bench version", "example": "bench --version"},
    {"code": "bench version", "description": "Show version of all apps", "example": "bench version"},
    {"code": "bench src", "description": "Show bench repo directory", "example": "bench src"},
    {"code": "bench --help", "description": "Show all commands and help", "example": "bench --help"},
    {"code": "bench [command] --help", "description": "Show help for command", "example": "bench update --help"},
    {"code": "bench init [bench-name]", "description": "Create a new bench (Run from home dir)", "example": "bench init my-bench"},
    {"code": "bench --site [site-name] [COMMAND]", "description": "Specify site for command", "example": "bench --site mysite migrate"},
    {"code": "bench update", "description": "Pulls changes for bench-repo and all apps, applies patches, builds JS and CSS, and then migrates.", "example": "bench update"},
    {"code": "bench restart", "description": "Restart all bench services", "example": "bench restart"},
    {"code": "bench backup", "description": "Create a backup of the default site.", "example": "bench backup"},
    {"code": "bench backup-all-sites", "description": "Backup all sites", "example": "bench backup-all-sites --with-files"},
    {"code": "bench restore [backup-file]", "description": "Restore backup", "example": "bench restore backup.tar --with-private-files"},
    {"code": "bench migrate", "description": "Run patches, sync schema and rebuild files/translations", "example": "bench migrate --rebuild-website index"},
    {"code": "bench migrate-env [python-version]", "description": "Migrate the virtual environment to the desired python version", "example": "bench migrate-env 3.10"},
    {"code": "bench --site [sitename] set-admin-password [password]", "description": "Reset the administrator password", "example": "bench --site mysite set-admin-password mypass"},
    {"code": "bench destroy-all-sessions", "description": "Destroys all sessions", "example": "bench destroy-all-sessions"},
    {"code": "bench config", "description": "Change bench configuration", "example": "bench config auto_update on"},
    {"code": "bench setup [component]", "description": "Setup components", "example": "bench setup nginx"},
    {"code": "bench new-app [app-name]", "description": "Creates a new app", "example": "bench new-app my_app"},
    {"code": "bench get-app [repo-link]", "description": "Downloads an app from a git repository and installs it", "example": "bench get-app https://github.com/frappe/my_app --branch develop"},
    {"code": "bench install-app [app-name]", "description": "Installs existing app", "example": "bench install-app my_app"},
    {"code": "bench remove-from-installed-apps [app-name]", "description": "Remove app from the list of apps", "example": "bench remove-from-installed-apps my_app"},
    {"code": "bench uninstall-app [app-name]", "description": "Delete app and everything linked to the app", "example": "bench uninstall-app my_app"},
    {"code": "bench remove-app [app-name]", "description": "Remove app from the bench entirely", "example": "bench remove-app my_app"},
    {"code": "bench --site [sitename] --force reinstall", "description": "Reinstall with fresh database (Caution: Will wipe out old database)", "example": "bench --site mysite --force reinstall"},
    {"code": "bench new-site [sitename]", "description": "Creates a new site", "example": "bench new-site mysite --db-name mydb --admin-password pass"},
    {"code": "bench use [site]", "description": "Sets a default site", "example": "bench use mysite"},
    {"code": "bench drop-site [site]", "description": "Removes site from disk and database completely", "example": "bench drop-site mysite --root-login root --root-password pass"},
    {"code": "bench set-config [key] [value]", "description": "Adds a key-value pair to site's config file", "example": "bench set-config developer_mode 1"},
    {"code": "bench console", "description": "Opens a IPython console in the bench venv", "example": "bench console --autoreload"},
    {"code": "bench execute [method]", "description": "Execute a method inside any app.", "example": "bench execute frappe.utils.scheduler.enqueue_scheduler_events"},
    {"code": "bench --site [sitename] mariadb", "description": "Opens SQL Console", "example": "bench --site mysite mariadb"},
    {"code": "bench --site [sitename] export-fixtures [--app TEXT]", "description": "Export the records defined in the app's hooks as JSON files.", "example": "bench --site mysite export-fixtures --app my_app"},
    {"code": "bench run-tests", "description": "Run tests", "example": "bench run-tests --app my_app --doctype DocType"},
    {"code": "bench disable-production", "description": "Disables production environment", "example": "bench disable-production"},
    {"code": "bench serve", "description": "Start a development web server on 0.0.0.0", "example": "bench serve --port 8000 --with-coverage"},
    {"code": "bench enable-scheduler", "description": "Enables Scheduler that will run scheduled tasks", "example": "bench enable-scheduler"},
    {"code": "bench doctor", "description": "Get diagnostic info about background workers", "example": "bench doctor"},
    {"code": "bench show-pending-jobs", "description": "Get pending jobs", "example": "bench show-pending-jobs"},
    {"code": "bench purge-jobs", "description": "Destroy all pending jobs", "example": "bench purge-jobs"},
    {"code": "bench data-import", "description": "Imports Bulk Data from .csv, .xls or .xlsx", "example": "bench data-import --file data.csv --doctype Customer --type Insert"}
  ],
  "created": "2025-09-29",
  "updated": "2025-09-29"
}